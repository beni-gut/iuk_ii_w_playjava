# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing a sample home page
GET     /                           controllers.HomeController.index


# Book routes
# Alle Bücher abfragen
GET     /books              controllers.BookController.books(q: String ?= null)

# Neues Buchdetail erfassen
POST    /books              controllers.BookController.create(request: Request)

# Buchdetail mit ID aktualisieren
PUT     /books/:id          controllers.BookController.update(id: Long, request: Request)

# Abfragen Buch mit ID
GET     /books/:id          controllers.BookController.details(id: Long)

# Buch mit ID löschen
DELETE  /books/:id          controllers.BookController.delete(id: Long)


# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file       controllers.Assets.versioned(path="/public", file: Asset)
